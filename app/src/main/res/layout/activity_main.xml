<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#465495"
    android:backgroundTint="#FF9800"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/tbNombre"
        android:layout_width="270dp"
        android:layout_height="62dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#29A52E"
        android:ems="10"
        android:hint="introduce tu nombre diavlo:"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tbCelular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="108dp"
        android:ems="10"
        android:hint="CELULAR:"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tbNombre"
        app:layout_constraintTop_toBottomOf="@+id/tbNombre"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/BTNbotonsito"
        android:layout_width="127dp"
        android:layout_height="78dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="#8BC34A"
        android:text="BOTONSITO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbCelular"
        app:layout_constraintVertical_bias="0.144" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="21dp"
        android:hint="el resultado diavlo"
        app:layout_constraintBottom_toTopOf="@+id/BTNbotonsito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbCelular"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/BTNinvertirTexto"
        android:layout_width="129dp"
        android:layout_height="63dp"
        android:layout_marginBottom="104dp"
        android:hint="@string/app_name"
        android:text="TextoAlrevez"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/BTNbotonsito"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/BTNbotonsito" />
</androidx.constraintlayout.widget.ConstraintLayout>